{% extends 'base.html.twig' %}

{% block title %}Votre panier{% endblock %}

{% block body %}
<div class="max-w-5xl mx-auto p-6 bg-white rounded-xl shadow-md mt-6">
  <h1 class="text-2xl font-bold text-gray-900 mb-6">Votre panier</h1>

  {% set price = 0.0 %}

  {% if products|length > 0 %}
    <div class="space-y-6">
      {% for prod in products %}
        <div class="flex items-center border-b border-gray-200 pb-4">
          <div class="w-24 h-24 flex-shrink-0">
            <img src="{{ prod.image }}" alt="{{ prod.name }}" class="w-full h-full object-cover rounded">
          </div>

          <div class="ml-4 flex-1">
            <h2 class="text-lg font-semibold text-gray-900">{{ prod.name }}</h2>
            <p class="text-sm text-gray-600 line-clamp-2">{{ prod.description }}</p>
            <a href="{{ url('view_product', {'id': prod.id}) }}"
               class="text-indigo-600 hover:underline text-sm">Voir le produit</a>
          </div>

          <div class="flex items-center space-x-3">
            <a href="/cart/dec/{{ prod.id }}"
               class="px-2 py-1 bg-gray-200 rounded hover:bg-gray-300">−</a>
            <span class="px-2 font-medium">{{ prod.count }}</span>
            <a href="/cart/inc/{{ prod.id }}"
               class="px-2 py-1 bg-gray-200 rounded hover:bg-gray-300">+</a>
          </div>

          <div class="ml-6 text-right">
            <div class="text-gray-900 font-semibold">
              {{ (prod.count * prod.price)|number_format(2, ',', ' ') }} €
            </div>
            <a href="/cart/delete/{{ prod.id }}"
               class="text-red-500 hover:text-red-700 text-sm flex items-center justify-end mt-2">
              <img src="/images/Trash.png" alt="Supprimer" width="18" class="mr-1"/> Supprimer
            </a>
          </div>
        </div>

        {% set price = price + prod.count * prod.price %}
      {% endfor %}
    </div>

    <div class="mt-8 border-t pt-6 flex flex-col md:flex-row md:items-center md:justify-between">
      <div class="text-xl font-bold text-gray-900">Total : {{ price|number_format(2, ',', ' ') }} €</div>

      <div class="mt-4 md:mt-0 flex space-x-3">
        <a href="{{ url('cart_erase') }}"
           class="px-4 py-2 bg-red-500 text-white rounded-lg shadow hover:bg-red-600 transition">
          Vider le panier
        </a>
        <a href="{{ url('add_order') }}"
           class="px-4 py-2 bg-indigo-600 text-white rounded-lg shadow hover:bg-indigo-700 transition">
          Valider ma commande
        </a>
      </div>
    </div>

  {% else %}
    <div class="text-center py-12">
      <p class="text-lg text-gray-600">Votre panier est vide</p>
    </div>
  {% endif %}
</div>
{% endblock %}
