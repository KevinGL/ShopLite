{% extends 'base.html.twig' %}

{% block title %}Modifier une catégorie{% endblock %}

{% block body %}
<div class="flex justify-center items-center min-h-screen bg-gray-100">
    <div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-md">
        <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">
            ➕ Modifier une catégorie
        </h1>

        {{ form_start(form, { attr: { class: "space-y-6" } }) }}
            <div>
                {{ form_label(form.name, 'Nom de la catégorie', { label_attr: { class: "block mb-2 text-sm font-medium text-gray-700" } }) }}
                {{ form_widget(form.name, { attr: { class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-blue-400" } }) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="flex justify-center">
                <button type="submit"
                        class="px-6 py-2 bg-green-500 text-white font-semibold rounded-lg shadow hover:bg-green-600 transition">
                    Mettre à jour
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
