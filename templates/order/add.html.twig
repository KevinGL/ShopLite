{% extends 'base.html.twig' %}

{% block title %}Votre commande{% endblock %}

{% block body %}
    <div>
        <h1>Votre commande</h1>
        
        <div>
            {% for product in products %}
                <h2>{{ product.product.name }} ({{ product.quantity }}x)</h2>
                <img src="{{ product.product.image }}" alt="{{ product.product.name }}" width="100" />
            {% endfor %}
        </div>

        <h2>Livraison</h2>

        {{ form(form) }}
    </div>
{% endblock %}
