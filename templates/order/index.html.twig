{% extends 'base.html.twig' %}

{% block title %}Liste des commandes{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto p-6">
    <h1 class="text-2xl font-bold mb-6">üì¶ Liste des commandes</h1>

    {% set currentPage = page|default(1) %}

    <div class="flex justify-center space-x-2 my-6">
        {% if currentPage > 1 %}
            <a href="{{ url('orders', {'page': currentPage - 1}) }}"
            class="px-3 py-1 rounded-md border bg-white text-gray-700 hover:bg-gray-100">
                ‚Äπ
            </a>
        {% endif %}

        {% if currentPage > 3 %}
            <a href="{{ url('orders', {'page': 1}) }}"
            class="px-3 py-1 rounded-md border bg-white text-gray-700 hover:bg-gray-100">1</a>
            <span class="px-2">...</span>
        {% endif %}

        {% for i in (currentPage - 2)..(currentPage + 2) %}
            {% if i > 0 and i <= nbPages %}
                <a href="{{ url('orders', {'page': i}) }}"
                class="px-3 py-1 rounded-md border {{ i == currentPage ? 'bg-indigo-600 text-white border-indigo-600' : 'bg-white text-gray-700 hover:bg-gray-100' }}">
                    {{ i }}
                </a>
            {% endif %}
        {% endfor %}

        {% if currentPage < nbPages - 2 %}
            <span class="px-2">...</span>
            <a href="{{ url('orders', {'page': nbPages}) }}"
            class="px-3 py-1 rounded-md border bg-white text-gray-700 hover:bg-gray-100">{{ nbPages }}</a>
        {% endif %}

        {% if currentPage < nbPages %}
            <a href="{{ url('orders', {'page': currentPage + 1}) }}"
            class="px-3 py-1 rounded-md border bg-white text-gray-700 hover:bg-gray-100">
                ‚Ä∫
            </a>
        {% endif %}
    </div>

    <div class="overflow-x-auto bg-white shadow-md rounded-lg">
        <table class="min-w-full border-collapse">
            <thead class="bg-gray-100 border-b">
                <tr class="text-left text-sm font-semibold text-gray-700">
                    <th class="px-4 py-3">#</th>
                    <th class="px-4 py-3">Client</th>
                    <th class="px-4 py-3">Date commande</th>
                    <th class="px-4 py-3">Exp√©dition</th>
                    <th class="px-4 py-3">Livraison</th>
                    <th class="px-4 py-3">Statut</th>
                    <th class="px-4 py-3 text-center">Action</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 text-sm">
                {% for order in orders %}
                    {% if order.goAt is null and order.deliveredAt is null %}
                        {% set status = 'En pr√©paration' %}
                        {% set statusColor = 'bg-red-100 text-red-800' %}
                    {% elseif order.goAt is not null and order.deliveredAt is null %}
                        {% set status = 'Exp√©di√©e' %}
                        {% set statusColor = 'bg-orange-100 text-orange-800' %}
                    {% else %}
                        {% set status = 'Finalis√©e' %}
                        {% set statusColor = 'bg-green-100 text-green-800' %}
                    {% endif %}

                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3 font-medium text-gray-900">{{ order.id }}</td>
                        <td class="px-4 py-3">{{ order.user.username }}</td>
                        <td class="px-4 py-3">
                            {% if order.createdAt %}
                                {{ order.createdAt|date("d/m/Y H:i") }}
                            {% else %}
                                <span class="text-gray-400">N/A</span>
                            {% endif %}
                        </td>
                        <td class="px-4 py-3">
                            {% if order.goAt %}
                                {{ order.goAt|date("d/m/Y H:i") }}
                            {% else %}
                                <span class="text-gray-400">N/A</span>
                            {% endif %}
                        </td>
                        <td class="px-4 py-3">
                            {% if order.deliveredAt %}
                                {{ order.deliveredAt|date("d/m/Y H:i") }}
                            {% else %}
                                <span class="text-gray-400">N/A</span>
                            {% endif %}
                        </td>
                        <td class="px-4 py-3">
                            <span class="px-2 py-1 rounded-md text-xs font-semibold {{ statusColor }}">
                                {{ status }}
                            </span>
                        </td>
                        <td class="px-4 py-3 text-center">
                            <a href="{{ url('view_admin_order', {'id': order.id}) }}"
                               class="text-indigo-600 hover:text-indigo-800 font-medium">
                                Voir ‚Üí
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="flex justify-center space-x-2 my-6">
        {% if currentPage > 1 %}
            <a href="{{ url('orders', {'page': currentPage - 1}) }}"
            class="px-3 py-1 rounded-md border bg-white text-gray-700 hover:bg-gray-100">
                ‚Äπ
            </a>
        {% endif %}

        {% if currentPage > 3 %}
            <a href="{{ url('orders', {'page': 1}) }}"
            class="px-3 py-1 rounded-md border bg-white text-gray-700 hover:bg-gray-100">1</a>
            <span class="px-2">...</span>
        {% endif %}

        {% for i in (currentPage - 2)..(currentPage + 2) %}
            {% if i > 0 and i <= nbPages %}
                <a href="{{ url('orders', {'page': i}) }}"
                class="px-3 py-1 rounded-md border {{ i == currentPage ? 'bg-indigo-600 text-white border-indigo-600' : 'bg-white text-gray-700 hover:bg-gray-100' }}">
                    {{ i }}
                </a>
            {% endif %}
        {% endfor %}

        {% if currentPage < nbPages - 2 %}
            <span class="px-2">...</span>
            <a href="{{ url('orders', {'page': nbPages}) }}"
            class="px-3 py-1 rounded-md border bg-white text-gray-700 hover:bg-gray-100">{{ nbPages }}</a>
        {% endif %}

        {% if currentPage < nbPages %}
            <a href="{{ url('orders', {'page': currentPage + 1}) }}"
            class="px-3 py-1 rounded-md border bg-white text-gray-700 hover:bg-gray-100">
                ‚Ä∫
            </a>
        {% endif %}
    </div>

    <div class="mt-6 text-right">
        <a href="{{ url('add_admin_order') }}"
           class="inline-block bg-indigo-600 text-white px-5 py-2 rounded-lg shadow hover:bg-indigo-700 transition">
            ‚ûï Ajouter une commande
        </a>
    </div>
</div>
{% endblock %}
